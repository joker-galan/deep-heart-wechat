/* pages/home/home.wxss */
.calendar-info {
    display: flex;
    max-height: 380rpx;
    flex-grow: 1;
    /*background-color: #2FBEB7;*/
    flex-direction: column;
}

.calendar-select {
    position: relative;
    display: flex;
    flex-grow: 2;
    /*background-color: #2FBEB7;*/
    flex-direction: column;
}

.content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 380rpx;
}

.right-box {
    display: flex;
    flex: 1;
    position: relative;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.right-box > .day {
    font-size: 6rem;
    text-align: center;
}

.left-box {
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.calendar-weeks {
    padding: 1% 1%;
    width: 98%;
    height: 70rpx;
    line-height: 70rpx;
    display: flex;
    flex-direction: row;
    font-size: 1.3rem;
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
}

.calendar-weeks-items {
    width: 14%;
    text-align: center;
}

.calendar-days {
    padding: 1% 1%;
    width: 98%;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    align-items: center;
    justify-content: start;
}

.hover{
    border-radius: 10rpx;
    background-color: rgba(0, 0, 0,0.2);
}

.selected{
    color: #ccc;
    border-radius: 10rpx;
    background-image:url("https://blogx.oss-cn-hangzhou.aliyuncs.com/wechat/deep-heart/selected.png");
    background-size: 100% 100%;
    background-repeat: no-repeat;
}
.calendar-day-item{
    display: flex;
    flex-direction: column;
    width: 14%;
    height: 120rpx;
    align-items: center;
    justify-content: center;
}

.calendar-day-item-top{
    font-size: 1.4rem;
    width: 100%;
    text-align: center;
}

.calendar-day-item-bottom{
    font-size: 0.8rem;
    width: 100%;
    text-align: center;
}